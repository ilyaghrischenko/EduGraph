@{
    ViewData["Title"] = "Заявки на реєстрацію";
    ViewBag.HasHeader = true;
}

@model EduGraph.Models.SignUpApplicationsViewModel

@section Header
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="SignUpApplications">Заявки на реєстрацію</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AddUser">Додати користувача</a>
    </li>
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr/>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

@if (!Model.Applications.Any())
{
    <div class="alert alert-info" role="alert">
        Наразі немає нових заявок на реєстрацію.
    </div>
}
else
{
    <div class="border rounded-3 shadow-sm">
        <table class="table table-striped table-hover mb-0">
            <thead>
            <tr>
                <th scope="col" class="text-center">ID</th>
                <th scope="col" class="text-center">ПІБ</th>
                <th scope="col" class="text-center">Тип</th>
                <th scope="col" class="text-center">Група</th>
                <th scope="col" class="text-center">Логін</th>
                <th scope="col" class="text-center">
                    <a asp-action="SignUpApplications"
                       asp-route-page="1"
                       asp-route-descending="@(!Model.IsDescending)"
                       class="text-dark text-decoration-none"
                       title="Натисніть, щоб змінити порядок сортування">
        
                        Дата заявки
        
                        @if (Model.IsDescending)
                        {
                            <span class="small text-muted ms-1">▼</span>
                        }
                        else
                        {
                            <span class="small text-muted ms-1">▲</span>
                        }
                    </a>
                </th>
                <th scope="col" class="text-center" style="width: 150px;">Дії</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var app in Model.Applications)
            {
                <tr>
                    <td class="text-center">@app.Id</td>
                    <td class="text-center">@app.FullName</td>
                    <td class="text-center">@app.Type</td>
                    <td class="text-center">@(app.Group ?? "N/A")</td>
                    <td class="text-center">@app.Login</td>
                    <td class="text-center">@app.CreatedAt.ToLocalTime().ToString("g")</td>
                    <td class="d-flex flex-row gap-2 text-center">
                        <form asp-action="ApproveSignUpApplication" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@app.Id"/>
                            <input type="hidden" name="currentPage" value="@Model.CurrentPage"/>
                            <input type="hidden" name="descending" value="@Model.IsDescending.ToString().ToLower()"/> 
                            <button type="submit" class="btn btn-success btn-sm">
                                Схвалити
                            </button>
                        </form>

                        <form asp-action="RejectSignUpApplication" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@app.Id"/>
                            <input type="hidden" name="currentPage" value="@Model.CurrentPage"/>
                            <input type="hidden" name="descending" value="@Model.IsDescending.ToString().ToLower()"/>
                            <button type="submit" class="btn btn-danger btn-sm">
                                Відхилити
                            </button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    <nav aria-label="Page navigation" class="mt-3">
        <ul class="pagination justify-content-center">

            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-action="SignUpApplications"
                   asp-route-page="@(Model.CurrentPage - 1)"
                   asp-route-descending="@Model.IsDescending">
                    Попередня
                </a>
            </li>

            <li class="page-item disabled">
                <span class="page-link">
                    Сторінка @Model.CurrentPage з @Model.TotalPages
                </span>
            </li>

            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-action="SignUpApplications"
                   asp-route-page="@(Model.CurrentPage + 1)"
                   asp-route-descending="@Model.IsDescending">
                    Наступна
                </a>
            </li>

        </ul>
    </nav>
}