@{
    ViewData["Title"] = "Вхід";

    ViewBag.HasHeader = true;
}

@model EduGraph.Features.Identity.LogIn.LogInRequest

@section Header {
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Identity" asp-action="LogIn">Увійти</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Identity" asp-action="SignUpApplication">Зареєструватися</a>
    </li>
}

<div class="row justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-5 col-lg-4">
        <h2 class="text-center mb-3">Вхід</h2>

        <form asp-controller="Identity" asp-action="LogIn">

            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Login" class="form-label">Логін</label>
                <input type="text" asp-for="Login" class="form-control" required/>
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Пароль</label>
                <input type="password" asp-for="Password" class="form-control" required/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Увійти</button>
        </form>
        
        <span>Немає аккаунту?<a asp-action="SignUpApplication" class="btn btn-link">Зареєструватись</a></span>
    </div>
</div>